        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#19def4"
            android:layout_height="@dimen/_46sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="CMTM-C"
                        android:textColor="#ffffff"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textSize="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#FFFFFF"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Confidential Material Tracking And Monitoring For Custodian"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/seting"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Setting"
                        android:textColor="#ffffff"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
        <TextView
            android:layout_width="match_parent"
            android:text="Upload Selfie(7065117266)"
            android:textColor="#092dfa"
            android:gravity="center"
            android:id="@+id/tvupload"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="@dimen/_12sdp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".40"
            android:orientation="vertical"
            android:layout_height="0dp">
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Name"
                android:id="@+id/edname"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="#000000"
                android:textColorHint="#000"
                android:textSize="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_height="@dimen/_35sdp" />
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Designation"
                android:id="@+id/eddesignation"
                android:textColor="#000000"
                android:textColorHint="#000"
                android:textSize="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_height="@dimen/_35sdp" />
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Branch/School code"
                android:id="@+id/edbrnchcode"
                android:textColor="#000000"
                android:textColorHint="#000"
                android:textSize="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/border"
                android:gravity="center"
                android:layout_height="@dimen/_35sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="300dp"
                android:src="@drawable/preview"
                android:background="@drawable/border"
                android:id="@+id/selfi"
                android:layout_height="300dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/heading1"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#0d0c0c"
                android:text="Click above image to capture selfie."
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/heading2"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#bf0707"
                android:text="NOTE : (1)Make sure camera is set to front facing/selfie mode.
                                    (2)There should be no obstacle between the camera and your face."
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:text="Upload"
                    android:gravity="center"
                    android:id="@+id/btnupload"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/border"
                    android:textSize="14dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>