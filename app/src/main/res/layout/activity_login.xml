<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_li"
    android:orientation="vertical"
    android:background="#edf3f5"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#1b88f5"
                android:layout_height="@dimen/_46sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="@string/app_name"
                        android:textColor="#ffffff"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textSize="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/_5sdp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#FFFFFF"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="@string/cmtm_full_name"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/seting"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/setting"
                            app:tint="@color/white" />
                       <!-- <TextView
                            android:layout_width="match_parent"
                            android:text="Setting"
                            android:textColor="#ffffff"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            />-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:background="@drawable/logocbse"
                        android:layout_height="@dimen/_80sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/heading1"
                        android:layout_width="match_parent"
                        android:textColor="#3F51B5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:text="@string/cbse"
                        android:layout_height="wrap_content" />
                </LinearLayout>
               <!-- <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp">-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_45sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:weightSum="4"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_width="match_parent"
                                android:hint="@string/enter_registered_mobile_number"
                                android:id="@+id/edAdminUsername"
                                android:padding="3dp"
                                android:inputType="number"
                                android:drawablePadding="15dp"
                                android:gravity="center_vertical"
                                android:textColor="#c1000000"
                                android:textColorHint="#c1000000"
                                android:textSize="15sp"
                                android:drawableLeft="@drawable/mobile"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@drawable/rounded_edittext"
                                android:layout_height="45dp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="wrap_content">
                                <Button
                                    android:layout_width="@dimen/_100sdp"
                                    android:text="@string/submit"
                                    android:textColor="#ffffff"
                                    android:id="@+id/btnEnter"
                                    android:background="@drawable/bg_btn"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
               <!-- </android.support.v7.widget.CardView>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_fb"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:src="@drawable/ic_facebook"
                        android:layout_margin="@dimen/_5sdp"
                        />
                    <ImageView
                        android:id="@+id/img_insta"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:src="@drawable/ic_insta"
                        android:layout_margin="@dimen/_5sdp"
                        />
                    <ImageView
                        android:id="@+id/img_tw"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:src="@drawable/ic_twitter"
                        android:layout_margin="@dimen/_5sdp"
                        />
                    <ImageView
                        android:id="@+id/img_yt"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:src="@drawable/ic_youtube"
                        android:layout_margin="@dimen/_5sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/link1"
                        android:layout_width="match_parent"
                        android:textColor="#3F51B5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:text="FAQ"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/link2"
                        android:layout_width="match_parent"
                        android:textColor="#3F51B5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:text="Contact Us"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gov_link"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/link3"
                        android:layout_width="match_parent"
                        android:textColor="#3F51B5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:text="https://www.india.gov.in/"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
